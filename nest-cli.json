{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/sonarqube/src",
  "monorepo": true,
  "root": "apps/sonarqube",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/sonarqube/tsconfig.app.json"
  },
  "projects": {
    "sonarqube": {
      "type": "application",
      "root": "apps/sonarqube",
      "entryFile": "main",
      "sourceRoot": "apps/sonarqube/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sonarqube/tsconfig.app.json"
      }
    },
    "pmd": {
      "type": "application",
      "root": "apps/pmd",
      "entryFile": "main",
      "sourceRoot": "apps/pmd/src",
      "compilerOptions": {
        "tsConfigPath": "apps/pmd/tsconfig.app.json"
      }
    },
    "eslint": {
      "type": "application",
      "root": "apps/eslint",
      "entryFile": "main",
      "sourceRoot": "apps/eslint/src",
      "compilerOptions": {
        "tsConfigPath": "apps/eslint/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "checkstyle": {
      "type": "application",
      "root": "apps/checkstyle",
      "entryFile": "main",
      "sourceRoot": "apps/checkstyle/src",
      "compilerOptions": {
        "tsConfigPath": "apps/checkstyle/tsconfig.app.json"
      }
    },
    "infer": {
      "type": "application",
      "root": "apps/infer",
      "entryFile": "main",
      "sourceRoot": "apps/infer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/infer/tsconfig.app.json"
      }
    },
    "cppcheck": {
      "type": "application",
      "root": "apps/cppcheck",
      "entryFile": "main",
      "sourceRoot": "apps/cppcheck/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cppcheck/tsconfig.app.json"
      }
    }
  }
}